{
  "rules": {
    "chat": {
      "$channelId": {
        ".read": "auth != null",
        ".write": "auth != null",
        ".indexOn": ["timestamp"]
      }
    },
    "presence": {
      "$uid": {
        ".read": "auth != null",
        ".write": "auth != null && auth.uid === $uid"
      }
    },
    "taskComments": {
      "$taskId": {
        ".read": "auth != null",
        ".write": "auth != null",
        ".indexOn": ["createdAt"]
      }
    },
    "clientNotes": {
      "$clientId": {
        ".read": "auth != null",
        ".write": "auth != null",
        ".indexOn": ["createdAt"]
      }
    }
  }
}
